<ul class="clearfix">
  <li <%= raw("class=\"current\"") if ["home"].index(controller_name) %>>
    <a href="<%= root_path %>" title="中国背包网首页">首页</a>
  </li>
  <% @areas.each do |area| -%>
    <li <%= raw "class=\"current\""  if area.slug == params[:slug] %>>
      <a href="<%= area_path(area.slug) %>" title="<%= area.description %>"><%= area.name %></a>
    </li>
  <% end -%>
  <li><a href="http://bbs.chinabeibao.com" title="论坛">论坛</a></li>
  <li><a href="http://home.chinabeibao.com/" title="家园">家园</a></li>
</ul>