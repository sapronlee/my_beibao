<% title "#{@area.name}的专题" %>
<div class="area_wrapper clearfix">
  <div class="area_banner"><%= image_tag @area.ad(:normal) %></div>
  <div class="left">
    <div class="box">
      <div class="title_wrapper"><h3><%= @area.name %>专题列表</h3></div>
      <div class="topics_wrapper">
        <%= render "areas/topics", :topics => @topics %>
      </div>
    </div>
    <%= paginate @topics, :route => :area_topics_path %>
  </div>
  <div class="right">
    <%= render "/shared/sidebar", :areas => @areas, :topics => @recent_topics, :routes => @recent_routes, :articles => @recent_articles %>
  </div>
</div>
<% content_for :styles do -%>
  <%= stylesheet_link_tag "area" %>
<% end -%>